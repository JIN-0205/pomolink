generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Clerkと連携するユーザーモデル
model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 通知設定
  emailNotifications Boolean @default(true)

  // 詳細なメール通知設定
  emailInvitations      Boolean @default(true)
  emailPomodoroComplete Boolean @default(true)
  emailSessionSummary   Boolean @default(true)
  emailDailyReminders   Boolean @default(false)
  emailWeeklyReports    Boolean @default(false)
  emailMaintenance      Boolean @default(true)

  // タイマー設定を追加
  workAlarmSound  String @default("buzzer") // "buzzer" | "siren" | "retro" | "kalimba" | "levelup"
  breakAlarmSound String @default("kalimba") // "buzzer" | "siren" | "retro" | "kalimba" | "levelup"

  // ユーザーが作成したルーム（プランナーとして）
  createdRooms Room[] @relation("RoomCreator")

  // メインプランナーとして設定されているルーム
  mainPlannerRooms Room[] @relation("RoomMainPlanner")

  // ユーザーが参加しているルーム
  participantRooms RoomParticipant[]

  // ユーザーに送られた招待
  receivedInvitations Invitation[] @relation("InvitationReceiver")

  // ユーザーが送った招待
  sentInvitations Invitation[] @relation("InvitationSender")

  // タスク提案
  taskProposals TaskProposal[]

  // サブスクリプション情報
  subscription Subscription?

  dailyReports DailyReport[]

  sessions Session[]
  uploads  Upload[]

  pointHistory PointHistory[]
}

// ルームモデル
model Room {
  id          String   @id @default(cuid())
  name        String
  description String?
  inviteCode  String   @unique
  isPrivate   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // ルーム作成者 (プランナー)
  creatorId String
  creator   User   @relation("RoomCreator", fields: [creatorId], references: [id], onDelete: Cascade)

  // メインプランナー（デフォルトは作成者、変更可能）
  mainPlannerId String?
  mainPlanner   User?   @relation("RoomMainPlanner", fields: [mainPlannerId], references: [id], onDelete: SetNull)

  // ルーム参加者
  participants RoomParticipant[]

  // ルーム内のタスク
  tasks Task[]

  // タスク提案
  taskProposals TaskProposal[]

  // ルームへの招待
  invitations  Invitation[]
  PointHistory PointHistory[]
}

// ルーム参加者の中間テーブル
model RoomParticipant {
  id       String   @id @default(cuid())
  role     UserRole // PLANNER or PERFORMER
  joinedAt DateTime @default(now())

  // 関連するユーザーとルーム
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  roomId String
  room   Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@unique([userId, roomId])
}

// ユーザーロール
enum UserRole {
  PLANNER
  PERFORMER
}

// 招待モデル
model Invitation {
  id        String           @id @default(cuid())
  createdAt DateTime         @default(now())
  expiresAt DateTime?
  status    InvitationStatus @default(PENDING)
  role      UserRole         @default(PERFORMER)

  // 招待元ルーム
  roomId String
  room   Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)

  // 招待を送ったユーザー
  senderId String
  sender   User   @relation("InvitationSender", fields: [senderId], references: [id], onDelete: Cascade)

  // 招待されたユーザー (メールアドレスのみの場合はnull)
  receiverId String?
  receiver   User?   @relation("InvitationReceiver", fields: [receiverId], references: [id])

  // メールアドレスのみでの招待の場合
  email String?

  // 招待方法
  method InvitationMethod
}

// 招待のステータス
enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}

// 招待方法
enum InvitationMethod {
  LINK
  EMAIL
}

// タスクの優先度
enum Priority {
  LOW
  MEDIUM
  HIGH
}

// タスクのステータス
enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
}

model Session {
  id                String    @id @default(cuid())
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String
  task              Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId            String
  startTime         DateTime
  endTime           DateTime?
  completed         Boolean   @default(false)
  recordingUrl      String?
  recordingDuration Int?
  notes             String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  dailyReport   DailyReport? @relation(fields: [dailyReportId], references: [id])
  dailyReportId String?

  uploads Upload[]
}

model Task {
  id             String     @id @default(cuid())
  title          String
  description    String?
  status         TaskStatus @default(TODO)
  priority       Priority   @default(MEDIUM)
  estimatedPomos Int?
  completedPomos Int        @default(0)
  workDuration   Int?       @default(25) // ポモドーロ作業時間（分）
  breakDuration  Int?       @default(5) // ポモドーロ休憩時間（分）
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  dueDate        DateTime?

  room   Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId String

  sessions Session[]

  uploads Upload[]
}

model Upload {
  id          String   @id @default(cuid())
  session     Session? @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId   String?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  fileUrl     String?
  description String?
  createdAt   DateTime @default(now())

  task   Task?   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId String?

  dailyReport   DailyReport? @relation(fields: [dailyReportId], references: [id])
  dailyReportId String?
}

model DailyReport {
  id        String    @id @default(cuid())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  date      DateTime  @unique // その日の YYYY-MM-DD を保持
  sessions  Session[]
  uploads   Upload[]
  createdAt DateTime  @default(now())
}

model Subscription {
  id                     String    @id @default(cuid())
  userId                 String    @unique
  user                   User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  planType               PlanType  @default(FREE)
  maxRoomMembers         Int       @default(3)
  historyRetentionMonths Int? // ポイント履歴保存月数（例: FREE=3, PRO=null(無制限)など）

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PlanType {
  FREE
  PRO
  TEAM
}

model PointHistory {
  id            String    @id @default(cuid())
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  roomId        String
  room          Room      @relation(fields: [roomId], references: [id], onDelete: Cascade)
  type          PointType
  points        Int
  reason        String?
  relatedTaskId String?
  createdAt     DateTime  @default(now())
}

// タスク提案モデル
model TaskProposal {
  id          String         @id @default(cuid())
  roomId      String
  room        Room           @relation(fields: [roomId], references: [id], onDelete: Cascade)
  proposerId  String
  proposer    User           @relation(fields: [proposerId], references: [id], onDelete: Cascade)
  title       String
  description String?
  status      ProposalStatus @default(PENDING)
  reviewedBy  String? // レビューしたプランナーのID
  reviewNote  String? // プランナーからのコメント
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

enum ProposalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PointType {
  TASK
  SUBMISSION
  SESSION_BONUS
  PLANNER_BONUS
}
